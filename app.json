{
    "name": "meili",
    "description": "meili demos",
    "keywords": [
        "php",
        "symfony"
    ],
    "repository": "https://github.com/survos-sites/dt-demo",
    "scripts": {
        "dokku": {
            "predeploy": "bin/console  secrets:decrypt-to-local --force && bin/console doctrine:migrations:migrate -n --allow-no-migration && bin/console importmap:install && bin/console asset-map:compile && ",
            "postdeploy": "bin/console about"
        }
    },
    "cron": [
        {
            "command": "bin/console mess:consume official.fetch.wiki  --time-limit 290",
            "schedule": "*/5 * * * *"
        },
        {
            "command": "bin/console mess:consume meili  --time-limit 115",
            "schedule": "*/2 * * * *"
        }
    ],
    "env": {
        "SECRET_TOKEN": {
            "description": "A secret key for verifying the integrity of signed cookies.",
            "value": "secret"
        },
        "WEB_CONCURRENCY": {
            "description": "The number of processes to run.",
            "generator": "echo 5"
        }
    },
    "image": "gliderlabs/herokuish",
    "addons": [
        "dokku-postgres",
        "dokku-redis"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-php.git"
        }
    ]
}
